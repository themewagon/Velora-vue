{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "strict": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@axios": [
        "./src/plugins/axios.ts"
      ],
      "@images/*": [
        "./src/assets/images/*"
      ],
      "@styles/*": [
        "./src/styles/*"
      ],
      "@plugins/*": [
        "./src/plugins/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "skipLibCheck": true,
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "./typed-router.d.ts",
    "./vite.config.*",
    "./env.d.ts",
    "./shims.d.ts",
    "./src/**/*",
    "./src/**/*.vue",
    "./auto-imports.d.ts",
    "./components.d.ts"
  ],
  "exclude": [
    "./dist",
    "./node_modules"
  ]
}
